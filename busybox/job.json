{
  "taskGroups": [
    {
      "taskSpec": {
        "runnables": [
          {
            "container": {
              "imageUri": "busybox",
              "entrypoint": "/bin/sh",
              "commands": [
                "-c",
                "echo task index: ${BATCH_TASK_INDEX} bucket: ${BUCKET}"
              ]
            }
          }
        ]
      },
      "taskCount": 3,
      "taskEnvironments": {
        "variables": {
          "BUCKET": "batch-test-bucket"
        }
      }
    }
  ],
  "logsPolicy": {
    "destination": "CLOUD_LOGGING"
  }
}